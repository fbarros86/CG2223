<world> <!-- a world can have a camera, a window definition, and a single group -->
    <window width="512" height="512" />
    <camera> 
	    <position x="10" y="3" z="10" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="1000" /> <!-- optional, use these values as default-->
    </camera>
    <lights> 
		<light type="point" posx="0" posy="0.2" posz="0"/>
		<light type="directional" dirx="-1" diry="0.7" dirz="-0.5"/>
	</lights>
    <group>
            <models> 
                <model file="ring.3d"> <!-- generator box 2 3 box_2_3.3d -->
                    <texture file="8k_sun.jpg"/>
                    <color>
                        <diffuse R="200" G="200" B="000" />
                        <ambient R="50" G="50" B="00" />
                        <specular R="0" G="0" B="0" />
                        <emissive R="255" G="255" B="255" />
                        <shininess value="128" />
                    </color>
                </model>
            </models>
    </group>
</world>
